/* pages/index/index.wxss */
/* card1 */
.card1{
  text-align: center;
  padding:20rpx;
  border-bottom: 15rpx solid #F4F4F4;
  height: 825rpx;
}
.card1>.card1-1f>image{
  width:700rpx;
}
.card1>.card1-2f{
  display: flex;
  width:100%;
  margin-top:20rpx;
}
.card1>.card1-2f>.c1-2f-l,
.card1>.card1-2f>.c1-2f-c,
.card1>.card1-2f>.c1-2f-r{
  position: relative;
  width:31.5%;
}
.card1>.card1-2f>.c1-2f-c{margin:0 20rpx;}
.card1>.card1-2f>.c1-2f-l>view,
.card1>.card1-2f>.c1-2f-c>view,
.card1>.card1-2f>.c1-2f-r>view{
  font-size: 15px;
  font-weight: 800;
  color:#fff;
  margin-top:22rpx;
  position: relative;
  z-index: 2;
}
.card1>.card1-2f>.c1-2f-l>.text2,
.card1>.card1-2f>.c1-2f-c>.text2,
.card1>.card1-2f>.c1-2f-r>.text2{
  font-size: 14px;
  font-weight: 600;
  margin-top:15rpx;
}
.card1>.card1-2f>.c1-2f-l>image,
.card1>.card1-2f>.c1-2f-c>image,
.card1>.card1-2f>.c1-2f-r>image{
  width:100%;
  height:280rpx;
  position: absolute;
  top:0;
  left:0;
}
/* card2 */
.card2{border-bottom: 15rpx solid #F4F4F4;}
.scroll-header{
  padding:20rpx;
  display: flex;
  white-space: nowrap;
}
.scroll-header .scroll-view-item{
  display: inline-block;
  border:1px solid #f4f4f4;
  margin-right: 18rpx;
}
.scroll-view-item>image{
  width:280rpx;
  height:180rpx;
}
.scroll-view-item>view>view{
  margin-left: 18rpx;
  text-align: left;
  font-size: 13px;
  color:#444;
}
.scroll-text{
  margin:14rpx 0;
}
/* card3 */
.card3-2f{
  padding-top:20rpx;
  display: flex;
  font-size: 14px;
  color:#444;
  flex-wrap: wrap;
}
.card3-2f>view{
  margin: 0 0 30rpx 20rpx;
  font-size: 13px;
}
.card3-2f>view>image{
  width:345rpx;
  height:260rpx;
  border-radius: 10rpx
}
/* card2 card3公共样式 */
.card2,
.card3{
  text-align: center;
  padding-bottom: 18rpx; 
}
.card2-1f,
.card3-1f{
  color:#656565;
  padding:20rpx;
  border-bottom: 3rpx solid #F4F4F4;
  font-size: 15px;
}
.card2-1f>text,
.card3-1f>text{color:#ddd}